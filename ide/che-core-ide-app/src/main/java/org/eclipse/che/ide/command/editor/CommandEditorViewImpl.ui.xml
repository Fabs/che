<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:che='urn:import:org.eclipse.che.ide.ui'>

    <ui:style>
        @eval partBackground org.eclipse.che.ide.api.theme.Style.theme.partBackground();
        @eval tabsPanelBackground org.eclipse.che.ide.api.theme.Style.theme.tabsPanelBackground();

        .mainPanel {
            background-color: partBackground;
        }

        .header {
            background-color: tabsPanelBackground;
            padding: 10px 0 0 10px;
        }

        .tabsPanel {
            float: left;
        }

        .button {
            float: left;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.mainPanel}">
        <g:north size="50">
            <g:FlowPanel height="40px" addStyleNames="{style.header}">
                <g:FlowPanel width="450px" height="30px" addStyleNames="{style.tabsPanel}">
                    <che:radiobuttongroup.RadioButtonGroup ui:field="pagesSwitcher" debugId="command-editor-pages-switcher"/>
                </g:FlowPanel>
                <g:Button ui:field="saveButton" text="Save" addStyleNames="{style.button}" debugId="command-editor-button-save"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DeckPanel ui:field="pagesPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
